@model ClinicaMedicaWeb.Models.Consulta;

@if (ViewBag.TipoMensagem != null)
{
    if (ViewBag.TipoMensagem == "ERRO")
    {
<div class="alert alert-danger">@ViewBag.Mensagem</div> }
else if (ViewBag.TipoMensagem == "SUCESSO")
{
<div class="alert alert-success">@ViewBag.Mensagem</div>}
}

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div>
        <div class="form-group">
            <label asp-for="Paciente.Nome">Paciente</label>
            <input asp-for="Paciente.Nome" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Medico.Nome">Médico</label>
            <input asp-for="Medico.Nome" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="DataConsulta"></label>
            <input asp-for="DataConsulta" class="form-control" />
            <span asp-validation-for="DataConsulta" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label asp-for="HoraConsulta"></label>
            <input type="time" asp-for="HoraConsulta" class="form-control" />
            <span asp-validation-for="HoraConsulta" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-secondary" asp-controller="Consulta" asp-action="Index">Cancelar</button>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}