@model ClinicaMedicaWeb.Models.Consulta;

@if (ViewBag.TipoMensagem != null)
{
    if (ViewBag.TipoMensagem == "ERRO")
    {
<div class="alert alert-danger">@ViewBag.Mensagem</div> }
else if (ViewBag.TipoMensagem == "SUCESSO")
{
<div class="alert alert-success">@ViewBag.Mensagem</div>}
}

<form method="post">
    <div>
        <div class="form-group">
            <label asp-for="Secretaria.Nome">Secretario(a)</label>
            <input asp-for="Secretaria.Nome" class="form-control" value="@User.Identity.Name" readonly />
            <input asp-for="SecretariaId" value="@User.Claims.First(x => x.Type == System.Security.Claims.ClaimTypes.Sid).Value" type="hidden" />
            <span asp-validation-for="SecretariaId" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label asp-for="MedicoId">Médico</label>
            <select class="form-control" asp-for="MedicoId" asp-items="@ViewBag.Medicos"></select>
            <span type="hidden" asp-validation-for="MedicoId" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label asp-for="PacienteId">Paciente</label>
            <select class="form-control" asp-for="PacienteId" asp-items="@ViewBag.Pacientes"></select>
            <span type="hidden" asp-validation-for="PacienteId" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label asp-for="DataConsulta"></label>
            <input asp-for="DataConsulta" class="form-control"/>
            <span asp-validation-for="DataConsulta" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label asp-for="HoraConsulta"></label>
            <input type="time" asp-for="HoraConsulta" class="form-control"/>
            <span asp-validation-for="HoraConsulta" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label asp-for="Pagamento"></label>
            <select asp-for="Pagamento" class="form-control">
                <option disabled selected>Selecione</option>
                <option>Convênio</option>
                <option>Gratuito</option>
                <option>Particular</option>
            </select>
            <span asp-validation-for="Pagamento" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-secondary" asp-controller="Consulta" asp-action="Index">Cancelar</button>
            <button type="submit" class="btn btn-primary">Agendar</button>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}